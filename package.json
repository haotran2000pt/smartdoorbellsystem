  "dependencies": {
    "@mikro-orm/core": "^5.1.3",
    "@mikro-orm/mysql": "^5.1.3",
    "@mikro-orm/reflection": "^5.1.3",
    "@mikro-orm/sql-highlighter": "^1.0.1",
    "@types/passport": "^1.0.7",
    "bcrypt": "^5.0.1",
    "cookie-parser": "^1.4.6",
    "cors": "^2.8.5",
    "dayjs": "^1.11.2",
    "dotenv": "^16.0.0",
    "express": "^4.17.3",
    "express-promise-router": "^4.1.1",
    "http-status-codes": "^2.2.0",
    "jsonwebtoken": "^8.5.1",
    "lodash": "^4.17.21",
    "moment": "^2.29.3",
    "multer": "^1.4.4",
    "nodemailer": "^6.7.5",
    "passport": "^0.5.2",
    "passport-jwt": "^4.0.0",
    "randomstring": "^1.2.2",
    "tsc-watch": "^5.0.0",
