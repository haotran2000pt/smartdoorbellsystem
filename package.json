{
  "name": "mikro-orm-express-ts-example",
  "version": "0.0.1",
  "description": "Example integration of MikroORM into express (in typescript)",
  "author": "Martin Adamek",
  "license": "MIT",
  "scripts": {
    "start": "npm --prefix ./client run build && tsc && node dist/server",
    "dev": "tsc-watch --onSuccess \"node dist/server\"",
